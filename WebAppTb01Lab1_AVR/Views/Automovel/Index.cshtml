@model IEnumerable<WebAppTb01Lab1_AVR.Models.Automovel>

@{
    ViewData["Title"] = "Automóveis";
}

<h2>Lista de Automóveis</h2>

<p>
    <a asp-action="Create">Cadastrar um novo Automóvel</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Tipo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descricao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Marca)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Disponivel)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataCadastro)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Disponivel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataCadastro)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AutomovelId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.AutomovelId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.AutomovelId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
